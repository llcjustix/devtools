# PostgreSQL variables
POSTGRES_DB=academy
POSTGRES_USER=postgres
POSTGRES_PASSWORD=passwd

# Keycloak admin (bootstrap)
KC_BOOTSTRAP_ADMIN_USERNAME=admin
KC_BOOTSTRAP_ADMIN_PASSWORD=admin

# DB for Keycloak (can reuse Postgres values)
KC_DB_USERNAME=${POSTGRES_USER}
KC_DB_PASSWORD=${POSTGRES_PASSWORD}
KC_DB_URL_HOST=postgres
KC_DB_URL_PORT=5432
KC_DB_URL_DATABASE=${POSTGRES_DB}

# SSL mode:
KC_DB_SSLMODE=disable

# MinIO variables
MINIO_ROOT_USER=minio
MINIO_ROOT_PASSWORD=minio123

# Redis variables
REDIS_PASSWORD=passwd

# Jitsi JWT Authentication
JITSI_JWT_APP_ID=meeting-app
JITSI_JWT_APP_SECRET=your-secret-key-here
JITSI_JWT_ISSUER=meeting-app
JITSI_JWT_AUDIENCE=meeting-app

# Jibri (Recording) credentials
JIBRI_RECORDER_PASSWORD=jibri-recorder-pass
JIBRI_XMPP_PASSWORD=jibri-xmpp-pass

# Jicofo (Conference Focus) credentials
JICOFO_COMPONENT_SECRET=jicofo-secret
JICOFO_AUTH_PASSWORD=jicofo-pass

# JVB (Videobridge) credentials
JVB_AUTH_PASSWORD=jvb-pass

# Jitsi Webhooks (for meeting-service integration)
JITSI_WEBHOOK_URL=http://localhost:2031/webhooks/jitsi
JITSI_WEBHOOK_SECRET=webhook-secret